footer.footer
    .footer-top
        .container.relative 
            img.img-union1(src="img/common/union-1.svg", alt="union") 
            img.img-shield(src="img/common/shield.png", alt="shield") 
            .flex-wrap.mb-lg-0.mb-8
                .w-lg-50.pr-lg-14.w-100.mb-16.mb-lg-80 
                    .case
                        img.case-img(src="img/common/img.jpg", alt="image")
