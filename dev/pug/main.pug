		section.fifth-section
			img.img-union.d-lg-block.d-none(src="img/common/union.svg", alt="union")
			.container.relative 
				img.img-shield.d-lg-block.d-none(src="img/common/shield.png", alt="shield")
				h6.title6.max-500.mx-auto.mb-md-0.mb-10 
					span.c-green.bg-gray.mx-auto Practice Areas
				.text-center
					h2.title2.mb-sm-24.mb-16 Where we practice
					p.fs-24.mt-md-40.mb-24.pt-12 We represent consumers nationwide.
				.flex-md-center-center
					a.btn.btn2(href="#") Free Case Review
