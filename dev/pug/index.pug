extends layout/main-case

block variables
	-var title = 'Case Evaluation - step 1'

block content
	main.main.main-case
		include modules/header/header2
		.align-items-center.main-case_container.mx-auto
			.mx-auto
				h4.title4.text-center.c-white.pb-8.mb-md-40.mb-20  Select an option that describes your case:
				each val in ['My credit report has mistakes','My credit report states that I am deceased','I am the victim of Identity Theft','My background check has mistakes']
					a.mb-12.flex-center-between.case-select(href="#") 
						=val
						+icon("next")