extends layout/main-case

block variables
	-var title = 'Case Evaluation - step 4'

block content
	main.main.main-case
		include modules/header/header2
		.align-items-center.main-case_container.mx-auto.pt-40
			.mx-auto.w-100
				h4.title4.text-center.c-white.pb-8.mb-md-40.mb-20 Have you received a response from the credit bureaus?
				
				.pb-md-36.pb-16
					each val in ['No, I never received a response and the item remains on my report','Yes, but the letter(s) I received from the bureau(s) states that the account information was verified and would not be changed', 'Yes, the inaccurate reporting has been corrected']
						a.mb-12.justify-content-between.case-select(href="#") 
							=val
							+icon("next","ml-16")
				a.btn.btn4.w-100.lh-38(type="#")
					+icon("arrow-left","mr-12") 
					| Previous step